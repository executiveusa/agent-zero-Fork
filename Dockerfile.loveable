FROM python:3.11-slim

# Install system dependencies
RUN apt-get update && apt-get install -y \
    libgtk-3-0 \
    libgconf-2-4 \
    libxss1 \
    libnss3 \
    libappindicator1 \
    libindicator7 \
    xdg-utils \
    fonts-liberation \
    xvfb \
    git \
    wget \
    curl \
    && rm -rf /var/lib/apt/lists/*

# Install Python dependencies
RUN pip install --no-cache-dir \
    playwright \
    requests \
    beautifulsoup4 \
    cryptography

# Install Playwright browsers
RUN playwright install chromium

# Create working directory
WORKDIR /app

# Copy test script
COPY test_loveable_with_credentials.py /app/

# Set environment variables â€” secrets injected at runtime, NOT baked into image
ENV EMAIL=""
ENV PASSWORD1=""
ENV PASSWORD2=""
# Pass these via: docker run -e EMAIL=... -e PASSWORD1=... -e PASSWORD2=...

# Run the test
CMD ["python3", "/app/test_loveable_with_credentials.py"]
