# Environment Configuration for Agent Zero + Telegram Bot
# ======================================================
# IMPORTANT: This file contains sensitive credentials
# DO NOT commit to git (see .gitignore)
# DO NOT share publicly
# Rotate credentials regularly
#
# Usage:
#   - Copy this file: cp .env.example .env
#   - Fill in your actual values
#   - Keep .env in .gitignore
#   - Load with: source .env (bash) or equivalent in your system

# ===== TELEGRAM BOT CONFIGURATION =====
# Get your Telegram Bot Token from @BotFather
TELEGRAM_BOT_TOKEN="your_telegram_bot_token_here"

# Your Telegram User ID (who can control the bot)
# Get it from @userinfobot
TELEGRAM_ADMIN_ID="your_telegram_admin_id_here"

# Optional: Comma-separated list of additional authorized users
TELEGRAM_AUTHORIZED_USERS="user_id_1,user_id_2"

# Telegram webhook URL (for production, optional for polling)
TELEGRAM_WEBHOOK_URL="https://your-domain.com/telegram/webhook"

# ===== HOSTINGER SERVER CONFIGURATION =====
# SSH connection to Hostinger VPS
HOSTINGER_SSH_HOST="your_hostinger_vps_ip"
HOSTINGER_SSH_PORT="22"
HOSTINGER_SSH_USER="root"
HOSTINGER_SSH_KEY_PATH="/home/user/.ssh/hostinger_key"

# Hostinger deployment paths
HOSTINGER_DEPLOY_PATH="/root/agent-zero"
HOSTINGER_BOT_PATH="/root/agent-zero-telegram-bot"

# ===== GITHUB CREDENTIALS (for repo control) =====
# GitHub Personal Access Token (with repo access)
# Create at: https://github.com/settings/tokens
# Scopes needed: repo (all), workflow (optional)
GITHUB_TOKEN="ghp_your_github_token_here"

# GitHub repository details
GITHUB_OWNER="executiveusa"
GITHUB_REPO="agent-zero-Fork"
GITHUB_BRANCH="main"

# ===== AGENT ZERO API CONFIGURATION =====
# Local Agent Zero API (for dashboard control)
AGENT_ZERO_API_URL="http://localhost:8000"
AGENT_ZERO_API_KEY="your_agent_zero_api_key_here"

# Hostinger Agent Zero API (when deployed)
HOSTINGER_AGENT_ZERO_URL="http://127.0.0.1:8000"
HOSTINGER_AGENT_ZERO_PORT="8000"

# ===== LLM PROVIDER CONFIGURATION =====
# Your preferred LLM provider for the bot's responses
# Options: anthropic, openai, google, groq, deepseek, etc.
BOT_LLM_PROVIDER="anthropic"
ANTHROPIC_API_KEY="sk-ant-your_anthropic_key_here"

# Optional: Other LLM provider keys
OPENAI_API_KEY="sk-your_openai_key_here"
GROQ_API_KEY="your_groq_key_here"
GOOGLE_API_KEY="your_google_key_here"

# ===== DATABASE CONFIGURATION =====
# Optional: For bot database (SQLite or PostgreSQL)
BOT_DATABASE_URL="sqlite:///./telegram_bot.db"
# Or for PostgreSQL:
# BOT_DATABASE_URL="postgresql://user:password@localhost/agent_zero_bot"

# ===== LOGGING AND MONITORING =====
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL="INFO"

# Sentry error tracking (optional)
SENTRY_DSN=""

# ===== SECURITY SETTINGS =====
# Secret key for session management
BOT_SECRET_KEY="generate_a_random_secret_key_here"

# CORS allowed origins (for API access)
CORS_ALLOWED_ORIGINS="localhost:3000,localhost:8000,your-domain.com"

# Rate limiting
API_RATE_LIMIT="100/hour"

# ===== BACKUP AND RECOVERY =====
# Backup configuration
BACKUP_ENABLED="true"
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM UTC
BACKUP_RETENTION_DAYS="30"
BACKUP_STORAGE_PATH="/root/backups"

# ===== SLACK NOTIFICATIONS (optional) =====
# Send bot events to Slack
SLACK_WEBHOOK_URL=""
SLACK_BOT_NOTIFICATIONS="true"

# ===== CUSTOM SETTINGS =====
# Bot command prefix
BOT_COMMAND_PREFIX="/"

# Max message length
BOT_MAX_MESSAGE_LENGTH="4096"

# Response timeout (seconds)
BOT_RESPONSE_TIMEOUT="30"

# ===== DEPLOYMENT =====
# Environment: development, staging, production
ENVIRONMENT="production"

# Enable debug mode (never in production)
DEBUG="false"

# Port for local bot server
BOT_SERVER_PORT="8001"

# ===== SYSTEM CONFIGURATION =====
# Python path for bot execution
PYTHON_EXECUTABLE="/usr/bin/python3"

# Virtual environment path
VENV_PATH="/root/venv"

# ===== NEW FEATURE INTEGRATIONS =====

# === GitHub Repository Scanner ===
# Already uses GITHUB_TOKEN above
# The GitHub repo scanner will use the token for:
#   - Scanning repositories for incomplete features
#   - Generating PRDs from repo analysis
#   - Creating issues and tracking improvements

# === Browser Login Agent ===
# This agent requires no additional configuration
# It uses Playwright which is already installed
# Configuration is per-login (credentials passed at runtime)
# Store login sessions in:
BROWSER_SESSION_PATH="/root/.agent-zero/browser-sessions"

# === Cloud Coding Integration (OpenCode) ===
# Create account at: https://opencode.app
# Generate API key in settings
OPENCODE_API_KEY="sk_oc_your_opencode_key_here"
OPENCODE_API_URL="https://api.opencode.app"

# === Notion API Integration ===
# Create Notion integration at: https://www.notion.so/my-integrations
# Generate API key in integration settings
NOTION_API_KEY="ntn_your_notion_api_key_here"

# === Loveable.dev Integration ===
# Register at: https://lovable.dev
# Generate API key in developer settings
LOVEABLE_API_KEY="lv_your_loveable_api_key_here"
LOVEABLE_API_URL="https://lovable.dev/api"

# === Mail MCP Server ===
# Email integration for Agent Zero
MAIL_MCP_ENABLED="true"
# Gmail configuration (OAuth2)
GMAIL_CLIENT_ID="your_gmail_client_id.apps.googleusercontent.com"
GMAIL_CLIENT_SECRET="your_gmail_client_secret"
GMAIL_REFRESH_TOKEN="your_gmail_refresh_token"

# Outlook/Microsoft configuration
OUTLOOK_CLIENT_ID="your_outlook_client_id"
OUTLOOK_CLIENT_SECRET="your_outlook_client_secret"
OUTLOOK_TENANT_ID="your_outlook_tenant_id"

# Custom IMAP servers
CUSTOM_EMAIL_IMAP_HOST="imap.example.com"
CUSTOM_EMAIL_IMAP_PORT="993"
CUSTOM_EMAIL_USER="user@example.com"
CUSTOM_EMAIL_PASSWORD="your_email_password"

# === Model Switching Configuration ===
# Default model to use
DEFAULT_LLM_PROVIDER="anthropic"
DEFAULT_LLM_MODEL="claude-3-5-sonnet-20241022"

# Additional LLM providers
DEEPSEEK_API_KEY="sk-your_deepseek_key_here"
MISTRAL_API_KEY="your_mistral_key_here"
SAMBANOVA_API_KEY="your_sambanova_key_here"
OLLAMA_API_URL="http://localhost:11434"
AZURE_OPENAI_API_KEY="your_azure_openai_key"
AZURE_OPENAI_ENDPOINT="https://your-resource.openai.azure.com/"
OPENROUTER_API_KEY="sk-or-your_openrouter_key_here"

# === Autonomous Agency Dashboard ===
# Agent coordination settings
AGENT_AUTO_DELEGATION="true"
AGENT_PARALLEL_EXECUTION="true"
AGENT_MEMORY_CONSOLIDATION="true"

# Agent communication settings
AGENT_COMMUNICATION_PROTOCOL="a2a"  # agent-to-agent
MAX_CONCURRENT_AGENTS="10"
AGENT_TASK_TIMEOUT="300"  # seconds

# === Vibe Coding Configuration ===
# CSS animation library
VIBE_ANIMATIONS_ENABLED="true"
VIBE_SMOOTH_TRANSITIONS="true"

# === Deployment and Vercel ===
# Vercel configuration (for frontend deployment)
VERCEL_TOKEN="your_vercel_token_here"
VERCEL_PROJECT_ID="your_vercel_project_id"
VERCEL_ORG_ID="your_vercel_org_id"

# Frontend URL after Vercel deployment
FRONTEND_URL="https://agent-zero-fork.vercel.app"

# === Docker Cloud Deployment ===
# Docker Hub credentials (for containerized deployment)
# Get Personal Access Token from: https://hub.docker.com/settings/security
DOCKER_USERNAME="your_docker_username"
DOCKER_TOKEN="your_docker_pat_token_here"
DOCKER_IMAGE_NAME="agent-zero-fork"
DOCKER_REGISTRY="docker.io"

# Docker deployment settings
DOCKER_AUTO_BUILD="true"
DOCKER_AUTO_PUSH="true"
DOCKER_REGISTRY_URL="https://hub.docker.com/r/your_docker_username/agent-zero-fork"

# === API Key Rotation ===
# Enable automatic key rotation
API_KEY_ROTATION_ENABLED="false"
API_KEY_ROTATION_INTERVAL="90"  # days

# === Feature Flags ===
# Enable/disable new features
FEATURE_GITHUB_SCANNER="true"
FEATURE_BROWSER_LOGIN="true"
FEATURE_CLOUD_CODING="true"
FEATURE_NOTION_SYNC="true"
FEATURE_LOVEABLE_UPGRADER="true"
FEATURE_VIBE_CODING="true"
FEATURE_AUTONOMOUS_AGENCY="true"
FEATURE_MODEL_SWITCHER="true"

# === Beads System (Agent Memory Tokens) ===
# Configure the beads system for atomic memory operations
BEADS_STORAGE_PATH="/root/.agent-zero/beads"
BEADS_COMPRESSION="gzip"
BEADS_MAX_BEAD_SIZE="10485760"  # 10MB
BEADS_RETENTION_DAYS="90"
