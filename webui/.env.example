# Agent Zero Dashboard Environment Configuration

# Development Environment
REACT_APP_API_URL=http://localhost:8000
REACT_APP_WS_URL=ws://localhost:8000/ws
REACT_APP_ENV=development

# Staging Environment (uncomment to use)
# REACT_APP_API_URL=https://staging-api.agent-zero.com
# REACT_APP_WS_URL=wss://staging-api.agent-zero.com/ws
# REACT_APP_ENV=staging

# Production Environment (uncomment to use)
# REACT_APP_API_URL=https://api.agent-zero.com
# REACT_APP_WS_URL=wss://api.agent-zero.com/ws
# REACT_APP_ENV=production

# Hostinger VPS Configuration
# REACT_APP_API_URL=https://your-hostinger-domain.com
# REACT_APP_WS_URL=wss://your-hostinger-domain.com/ws

# Feature Flags
REACT_APP_ENABLE_SPEECH=true
REACT_APP_ENABLE_VOICE=true
REACT_APP_ENABLE_PROJECTS=true
REACT_APP_ENABLE_MEMORY_DASHBOARD=true
REACT_APP_ENABLE_MCP_SERVERS=true
REACT_APP_ENABLE_SCHEDULER=true

# UI Configuration
REACT_APP_THEME=auto
REACT_APP_CHAT_MAX_HEIGHT=800
REACT_APP_MESSAGE_BATCH_SIZE=50
REACT_APP_AUTO_SCROLL=true

# API Configuration
REACT_APP_API_TIMEOUT=30000
REACT_APP_RECONNECT_INTERVAL=3000
REACT_APP_RECONNECT_ATTEMPTS=5

# Analytics (optional)
REACT_APP_ANALYTICS_ENABLED=false
REACT_APP_SENTRY_DSN=

# Logging
REACT_APP_LOG_LEVEL=info
REACT_APP_DEBUG=false
